modules = ["vue-node-18", "nodejs-18", "python-3.12", "bash"]
compile = "make dev"
run = "chmod +x start-local.sh && ./start-local.sh"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "make dev"]
run = ["sh", "-c", "chmod +x start-local.sh && ./start-local.sh"]

[workflows]
runButton = "Start Backend"

[[workflows.workflow]]
name = "Start Backend"
author = 42346629
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import asyncio; from app.db.init_db import init_db; asyncio.run(init_db())\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
