
<svg width="300" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="valuesGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2196F3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#42A5F5;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="200" fill="#f8f9fa"/>
  
  <!-- Values pillars -->
  <g transform="translate(75, 50)">
    <!-- Pillar 1 -->
    <rect x="0" y="40" width="30" height="60" fill="url(#valuesGradient)" rx="4"/>
    <text x="15" y="130" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="10">Excellence</text>
    
    <!-- Pillar 2 -->
    <rect x="60" y="30" width="30" height="70" fill="url(#valuesGradient)" rx="4"/>
    <text x="75" y="130" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="10">Confiance</text>
    
    <!-- Pillar 3 -->
    <rect x="120" y="35" width="30" height="65" fill="url(#valuesGradient)" rx="4"/>
    <text x="135" y="130" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="10">Innovation</text>
    
    <!-- Top connection -->
    <rect x="-5" y="25" width="160" height="8" fill="#FFD700" rx="4"/>
  </g>
  
  <!-- Stars for excellence -->
  <g transform="translate(50, 20)">
    <polygon points="15,5 18,12 25,12 20,17 22,25 15,21 8,25 10,17 5,12 12,12" fill="#FFD700"/>
    <polygon points="85,8 88,15 95,15 90,20 92,28 85,24 78,28 80,20 75,15 82,15" fill="#FFD700"/>
    <polygon points="155,5 158,12 165,12 160,17 162,25 155,21 148,25 150,17 145,12 152,12" fill="#FFD700"/>
  </g>
  
  <!-- Title -->
  <text x="150" y="180" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="16" font-weight="bold">Nos Valeurs</text>
</svg>
