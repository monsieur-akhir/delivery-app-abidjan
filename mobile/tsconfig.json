{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2023"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2023",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*"
  ]
}